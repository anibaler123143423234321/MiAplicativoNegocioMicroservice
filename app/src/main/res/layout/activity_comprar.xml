<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Añade una Toolbar sin título -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:layout_alignParentTop="true"
        android:title="" />

    <!-- Añade un botón de retroceso con descripción -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:contentDescription="Volver atrás"
        android:src="@drawable/ic_volver_atras"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@id/toolbar" />

    <!-- TextView para mostrar el ID del producto -->
    <TextView
        android:id="@+id/txtProductoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID del Producto: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/toolbar"
        android:layout_centerHorizontal="true" />

    <!-- TextView para mostrar el ID del usuario -->
    <TextView
        android:id="@+id/txtUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID del Usuario: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/txtProductoId"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <!-- TextView para mostrar el nombre del producto -->
    <TextView
        android:id="@+id/txtNombreProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Producto: "
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_below="@id/txtUserId"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" /> <!-- Alinea debajo de la Toolbar -->

    <!-- TextView para mostrar el precio del producto -->
    <TextView
        android:id="@+id/txtPrecioProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Precio: $0.00"
        android:textSize="18sp"
        android:layout_below="@id/txtNombreProducto"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" /> <!-- Alinea debajo de la Toolbar -->

    <!-- ImageView para mostrar la imagen del producto -->
    <ImageView
        android:id="@+id/imgProducto"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/txtPrecioProducto"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" /> <!-- Alinea debajo de la Toolbar -->

    <!-- EditText para ingresar la cantidad deseada con margen adicional -->
    <EditText
        android:id="@+id/edtCantidadDeseada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cantidad Deseada"
        android:inputType="number"
        android:layout_below="@id/imgProducto"
        android:layout_marginTop="16dp"
        android:layout_margin="8dp"
    android:layout_centerHorizontal="true" /> <!-- Alinea debajo de la Toolbar -->

    <!-- Botón para confirmar la compra -->
    <Button
        android:id="@+id/btnConfirmarCompra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar Compra"
        android:textSize="16sp"
        android:layout_below="@id/edtCantidadDeseada"
        android:layout_marginTop="24dp"
        android:layout_centerHorizontal="true" /> <!-- Alinea debajo de la Toolbar -->
</RelativeLayout>
